// Tıkla Bakım — Prisma Schema (SQLite — Yerel Geliştirme)
// Production için schema.mysql.prisma kullanın

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================================
// KULLANICI SİSTEMİ
// ============================================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  phone         String?
  password      String?
  image         String?
  role          String    @default("PET_OWNER") // PET_OWNER | BUSINESS_OWNER | ADMIN
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  pets          Pet[]
  appointments  Appointment[]
  businesses    Business[]
  reviews       Review[]
  notifications Notification[]

  @@index([email])
  @@index([role])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================================
// KATEGORİ
// ============================================================

model Category {
  id          String     @id @default(cuid())
  name        String
  slug        String     @unique  // "pet-kuafor", "berber" vb.
  description String?
  icon        String?    // emoji veya icon adı
  isActive    Boolean    @default(true)
  order       Int        @default(0)
  createdAt   DateTime   @default(now())

  businesses  Business[]

  @@map("categories")
}

// ============================================================
// ŞEHİR / İLÇE
// ============================================================

model City {
  id             String     @id @default(cuid())
  name           String
  slug           String     @unique
  isPublished    Boolean    @default(false)
  seoTitle       String?
  seoDescription String?
  seoContent     String?    // HTML içerik

  districts      District[]

  @@map("cities")
}

model District {
  id             String @id @default(cuid())
  name           String
  slug           String
  cityId         String
  isPublished    Boolean @default(false)
  seoTitle       String?
  seoDescription String?
  seoContent     String?  // HTML içerik
  city           City   @relation(fields: [cityId], references: [id], onDelete: Cascade)

  neighborhoods  Neighborhood[]

  @@unique([cityId, slug])
  @@index([cityId])
  @@map("districts")
}

// ============================================================
// İŞLETME
// ============================================================

model Business {
  id            String   @id @default(cuid())
  googlePlaceId String?  @unique
  slug          String   @unique
  name          String
  description   String?
  phone         String?
  email         String?
  website       String?

  address       String
  city          String
  district      String
  neighborhood  String?
  lat           Float?
  lng           Float?

  plan          String   @default("FREE") // FREE | BASIC | PREMIUM | ENTERPRISE
  planExpiresAt DateTime?
  isVerified    Boolean  @default(false)
  isFeatured    Boolean  @default(false)
  featuredScore Int      @default(0)
  isActive      Boolean  @default(true)

  adBalance     Float    @default(0)

  logo          String?
  coverPhoto    String?

  instagram     String?
  facebook      String?

  metaTitle     String?
  metaDesc      String?
  content       String?  // Zengin metin - HTML

  categoryId      String?
  category        Category?     @relation(fields: [categoryId], references: [id])

  neighborhoodId  String?
  neighborhoodRef Neighborhood? @relation(fields: [neighborhoodId], references: [id])

  ownerId       String?  // @unique kaldırıldı — bir kullanıcı birden fazla işletme sahibi olabilir
  owner         User?    @relation(fields: [ownerId], references: [id])

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  photos          BusinessPhoto[]
  services        Service[]
  workingHours    WorkingHours[]
  appointments    Appointment[]
  reviews         Review[]
  campaigns       Campaign[]
  groomingRecords GroomingRecord[]

  @@index([city, district])
  @@index([city])
  @@index([plan, featuredScore])
  @@index([isActive, isVerified])
  @@index([categoryId])
  @@index([neighborhoodId])
  @@map("businesses")
}

model BusinessPhoto {
  id         String   @id @default(cuid())
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  url        String
  caption    String?
  order      Int      @default(0)
  createdAt  DateTime @default(now())

  @@index([businessId])
  @@map("business_photos")
}

// ============================================================
// HİZMETLER
// ============================================================

model Service {
  id          String   @id @default(cuid())
  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  name        String
  category    String   @default("tum") // kedi | kopek | tum
  price       Float?
  duration    Int?
  description String?
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())

  appointments Appointment[]

  @@index([businessId])
  @@map("services")
}

// ============================================================
// PET PROFİLİ
// ============================================================

model Pet {
  id        String    @id @default(cuid())
  ownerId   String
  owner     User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  name      String
  type      String    // DOG | CAT | RABBIT | BIRD | OTHER
  breed     String?
  birthDate DateTime?
  weight    Float?
  gender    String?
  photo     String?
  notes     String?
  allergies String?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  vaccines        Vaccine[]
  appointments    Appointment[]
  groomingRecords GroomingRecord[]

  @@index([ownerId])
  @@map("pets")
}

// ============================================================
// RANDEVU
// ============================================================

model Appointment {
  id         String   @id @default(cuid())
  businessId String
  business   Business @relation(fields: [businessId], references: [id])
  petId      String
  pet        Pet      @relation(fields: [petId], references: [id])
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  serviceId  String?
  service    Service? @relation(fields: [serviceId], references: [id])

  date       DateTime
  duration   Int
  status     String   @default("PENDING") // PENDING | CONFIRMED | IN_PROGRESS | COMPLETED | CANCELLED | NO_SHOW
  notes      String?

  noShow     Boolean  @default(false)

  groomingNotes String?
  totalPrice    Float?
  completedAt   DateTime?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  photos AppointmentPhoto[]

  @@index([businessId, date])
  @@index([userId])
  @@index([petId])
  @@index([status])
  @@map("appointments")
}

model AppointmentPhoto {
  id            String      @id @default(cuid())
  appointmentId String
  appointment   Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  url           String
  type          String      // before | after
  createdAt     DateTime    @default(now())

  @@index([appointmentId])
  @@map("appointment_photos")
}

// ============================================================
// YORUM / PUAN
// ============================================================

model Review {
  id         String   @id @default(cuid())
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  rating     Int
  comment    String?
  isVerified Boolean  @default(false)
  isVisible  Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([businessId, userId])
  @@index([businessId, rating])
  @@index([userId])
  @@map("reviews")
}

// ============================================================
// BAKIM GEÇMİŞİ
// ============================================================

model GroomingRecord {
  id         String   @id @default(cuid())
  petId      String
  pet        Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  businessId String
  business   Business @relation(fields: [businessId], references: [id])
  date       DateTime
  services   String   // JSON string
  notes      String?
  price      Float?
  createdAt  DateTime @default(now())

  @@index([petId])
  @@index([businessId])
  @@map("grooming_records")
}

// ============================================================
// ÇALIŞMA SAATLERİ
// ============================================================

model WorkingHours {
  id         String   @id @default(cuid())
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  dayOfWeek  Int
  openTime   String
  closeTime  String
  isClosed   Boolean  @default(false)

  @@unique([businessId, dayOfWeek])
  @@map("working_hours")
}

// ============================================================
// BİLDİRİMLER
// ============================================================

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String
  title     String
  body      String
  data      String?  // JSON string (SQLite Json desteği yok)
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId, isRead])
  @@map("notifications")
}

// ============================================================
// AŞI TAKVİMİ
// ============================================================

model Vaccine {
  id          String    @id @default(cuid())
  petId       String
  pet         Pet       @relation(fields: [petId], references: [id], onDelete: Cascade)
  name        String
  date        DateTime
  nextDueDate DateTime?
  notes       String?
  createdAt   DateTime  @default(now())

  @@index([petId])
  @@index([nextDueDate])
  @@map("vaccines")
}

// ============================================================
// KAMPANYA & REKLAM
// ============================================================

model Campaign {
  id             String    @id @default(cuid())
  businessId     String
  business       Business  @relation(fields: [businessId], references: [id], onDelete: Cascade)
  title          String
  description    String
  targetCity     String?
  targetDistrict String?
  targetPetType  String?
  budget         Float
  spent          Float     @default(0)
  isActive       Boolean   @default(true)
  startsAt       DateTime
  endsAt         DateTime
  createdAt      DateTime  @default(now())

  @@index([businessId])
  @@index([isActive, startsAt, endsAt])
  @@map("campaigns")
}

// ============================================================
// SİSTEM AYARLARI
// ============================================================

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt

  @@map("settings")
}

// ============================================================
// PET TÜRLERİ
// ============================================================

model PetType {
  id             String  @id @default(cuid())
  name           String           // "Köpek"
  slug           String  @unique  // "kopek"
  icon           String?
  isActive       Boolean @default(true)
  seoTitle       String?
  seoDescription String?
  seoContent     String?

  @@map("pet_types")
}

// ============================================================
// SEMT
// ============================================================

model Neighborhood {
  id             String   @id @default(cuid())
  name           String
  slug           String
  districtId     String
  district       District @relation(fields: [districtId], references: [id], onDelete: Cascade)
  isPublished    Boolean  @default(false)
  seoTitle       String?
  seoDescription String?
  seoContent     String?

  businesses     Business[]

  @@unique([districtId, slug])
  @@index([districtId])
  @@map("neighborhoods")
}

// ============================================================
// ÖZEL SAYFALAR (CMS)
// ============================================================

model Page {
  id        String   @id @default(cuid())
  slug      String   @unique  // "hakkimizda", "iletisim", vb.
  title     String
  content   String?  // HTML içerik
  metaTitle String?
  metaDesc  String?
  isActive  Boolean  @default(true)
  isSystem  Boolean  @default(false) // Önceden tanımlı sistem sayfaları
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("pages")
}
